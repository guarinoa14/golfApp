import tkinter as tk

class Application(tk.Frame):
    def __init__(self,master=None):
        super().__init__(master)
        master.minsize(width=999,height=666)
        self.pack()
        self.mainMenu()

    def mainMenu(self):
        self.Title = tk.Label(self,text='Main Menu')
        self.Title.pack(side='top')
        self.enterRound = tk.Button(self,activeforeground="#fff",text="Enter Scores",command=self.enterRoundData,pady=10)
        self.enterRound.pack(side='top',pady=100)
        self.statistics = tk.Button(self,text="Stats",width=50,command=self.statistics)
        self.statistics.pack(side='bottom',pady=100)
        

    def enterRoundData(self):
        roundDataInputWindow = tk.Toplevel()
        roundDataInputWindow.minsize(width=999,height=666)
        roundDataInputWindow.maxsize(width=999,height=666)
        l = tk.Label(roundDataInputWindow,text='Enter score')
        l.grid(row=0,column=0)
        l = tk.Label(roundDataInputWindow,text='Hole')
        l.grid(row=1,column=0)
        l = tk.Label(roundDataInputWindow,text='Score')
        l.grid(row=2,column=0)
        l = tk.Label(roundDataInputWindow,text='FIR')
        l.grid(row=3,column=0)
        l = tk.Label(roundDataInputWindow,text='GIR')
        l.grid(row=4,column=0)
        l = tk.Label(roundDataInputWindow,text='Putts')
        l.grid(row=5,column=0)
        for i in range(1,19):
            number = i 
            i = tk.Label(roundDataInputWindow,text='%s' % i)
            i.grid(row=1,column=number,padx=10,)
            i = tk.Entry(roundDataInputWindow,width=2)
            i.grid(row=2,column=number,padx=10,pady=5)
            i = tk.Entry(roundDataInputWindow,width=2)
            i.grid(row=3,column=number,padx=10,pady=5)
            i = tk.Entry(roundDataInputWindow,width=2)
            i.grid(row=4,column=number,padx=10,pady=5)
            i = tk.Entry(roundDataInputWindow,width=2)
            i.grid(row=5,column=number,padx=10,pady=10)
        roundDataInputWindow.wm_title('Enter Round Data')
        closeButton = tk.Button(roundDataInputWindow,text='Close',command=roundDataInputWindow.destroy,width=10)
        closeButton.grid(row=6,column=0)

    def statistics(self):
        statisticsWindow = tk.Toplevel(self)
        statisticsWindow.minsize(width=999,height=666)
        statisticsWindow.wm_title('Statistics')
        l = tk.Label(statisticsWindow,text='Statistics')
        l.pack(side='top')
    

root = tk.Tk()
root.resizable(width=False,height=False)
app = Application(master=root)
app.master.title("Main Menu")

app.mainloop
